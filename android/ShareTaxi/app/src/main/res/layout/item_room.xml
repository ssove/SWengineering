<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_room_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#18c4c7"
        android:text="master"/>

    <TextView
        android:id="@+id/item_room_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#18c4c7"
        android:text="start"/>

    <TextView
        android:id="@+id/item_room_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#18c4c7"
        android:text="finish"/>

    <TextView
        android:id="@+id/item_room_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#18c4c7"
        android:text="time"/>

    <TextView
        android:id="@+id/item_room_numUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#18c4c7"
        android:text="numUsers"/>

    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

</LinearLayout>